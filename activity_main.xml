<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/RL1"
        android:layout_width="368dp"
        android:layout_height="672dp"
        android:layout_alignTop="@+id/b8"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp">
        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="150dp"
            android:backgroundTint="@color/purple_200"
            android:padding="10dp"
            android:text="1" /><!--   android:onClick="one"-->
        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/b1"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/b1"
            android:backgroundTint="@color/purple_200"
            android:padding="10dp"
            android:text="2" /><!--android:onClick="two"-->
        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@color/purple_200"
            android:padding="10dp"
            android:text="3" /><!--android:onClick="three"-->
        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/b3"
            android:layout_alignTop="@id/b3"
            android:backgroundTint="@color/purple_200"
            android:padding="10dp"
            android:text="4" /><!--android:onClick="four"-->
        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="250dp"
            android:layout_alignParentLeft="true"
            android:backgroundTint="@color/purple_200"
            android:padding="10dp"
            android:text="5" />
        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_alignTop="@id/b5"
            android:layout_toRightOf="@id/b5"
            android:backgroundTint="@color/purple_200"
            android:padding="10dp"
            android:text="6" /><!--android:onClick="six"-->
        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="300dp"
            android:backgroundTint="@color/purple_200"
            android:padding="10dp"
            android:text="7" /><!--android:onClick="seven"-->
        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/b7"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/b7"
            android:backgroundTint="@color/purple_200"
            android:padding="10dp"
            android:text="8" /><!--android:onClick="eight"-->
        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="13dp"
            android:layout_alignParentLeft="true"
            android:backgroundTint="@color/purple_200"
            android:padding="10dp"
            android:text="9" /><!--android:onClick="nine"-->
        <Button
            android:id="@+id/b10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_alignTop="@id/b9"
            android:layout_toRightOf="@id/b9"
            android:backgroundTint="@color/purple_200"
            android:padding="10dp"
            android:text="0" /><!--android:onClick="ten"-->
        <Button
            android:id="@+id/b11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/b2"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/b2"
            android:backgroundTint="@color/purple_700"
            android:padding="10dp"
            android:text="+" /><!--android:onClick="plus"-->

        <Button
            android:id="@+id/b12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/b4"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/b4"
            android:backgroundTint="@color/purple_700"
            android:padding="10dp"
            android:text="-" /><!--android:onClick="minus"-->
        <Button
            android:id="@+id/b13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_alignTop="@id/b6"
            android:layout_toRightOf="@id/b6"
            android:backgroundTint="@color/purple_700"
            android:padding="10dp"
            android:text="*" /><!--android:onClick="star"-->
        <Button
            android:id="@+id/b14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/b8"
            android:layout_marginStart="13dp"
            android:layout_toRightOf="@id/b8"
            android:backgroundTint="@color/purple_700"
            android:text="/"/>
        <Button
            android:id="@+id/b15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/b10"
            android:layout_marginStart="13dp"
            android:layout_toRightOf="@id/b10"
            android:backgroundTint="@color/purple_700"
            android:text="=" /><!--android:onClick="equal"-->
        <Button
            android:id="@+id/b16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="400dp"
            android:backgroundTint="@color/purple_700"
            android:padding="10dp"
            android:text="." /><!--android:onClick="dot"-->
        <Button
            android:id="@+id/b17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/b16"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/b16"
            android:backgroundTint="@color/purple_700"
            android:padding="10dp"
            android:text="," /><!--android:onClick="firstmethod"-->
        <Button
            android:id="@+id/b18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/b17"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/b17"
            android:backgroundTint="@color/purple_700"
            android:padding="10dp"
            android:text="CLEAR" /><!--android:onClick="clear"-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b18"
            android:padding="20dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:hint="Enter Number" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="71dp"
            android:padding="20dp"
            android:layout_marginLeft="60dp"
            android:hint="Ankit 1177"
            android:textAlignment="center"
            android:textSize="30dp" />
    </RelativeLayout>
</LinearLayout>

